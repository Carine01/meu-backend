{
  "dashboard": {
    "id": null,
    "uid": "auth-rbac-dashboard",
    "title": "API Auth & RBAC",
    "tags": ["auth", "security", "rbac"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "type": "graph",
        "title": "Tentativas de Login",
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "login_attempts_total",
            "legendFormat": "Tentativas",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Contagem",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": true
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        }
      },
      {
        "type": "graph",
        "title": "Falhas de Login",
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "login_failures_total",
            "legendFormat": "Falhas",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Contagem",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": true
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        },
        "alert": {
          "name": "High Login Failures",
          "message": "Too many login failures detected",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ]
        }
      },
      {
        "type": "graph",
        "title": "Refresh Token Usage",
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "refresh_token_requests_total",
            "legendFormat": "Refresh Requests",
            "refId": "A"
          },
          {
            "expr": "refresh_token_failures_total",
            "legendFormat": "Refresh Failures",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Contagem",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": true
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        }
      },
      {
        "type": "table",
        "title": "Duração das Requisições HTTP (P95)",
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket[5m])) by (le, route))",
            "legendFormat": "{{route}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "styles": [
          {
            "type": "hidden",
            "pattern": "Time",
            "alias": "Time"
          },
          {
            "unit": "ms",
            "type": "number",
            "alias": "Latência P95",
            "decimals": 2,
            "pattern": "Value",
            "thresholds": ["100", "500"]
          }
        ],
        "transform": "table"
      },
      {
        "type": "stat",
        "title": "Taxa de Sucesso de Login",
        "id": 5,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "(sum(login_attempts_total) - sum(login_failures_total)) / sum(login_attempts_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "type": "stat",
        "title": "Usuários Ativos (últimas 24h)",
        "id": 6,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "targets": [
          {
            "expr": "count(count_over_time(login_attempts_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "type": "graph",
        "title": "RBAC - Tentativas de Acesso Negado",
        "id": 7,
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "rbac_access_denied_total",
            "legendFormat": "{{role}} - {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Acessos Negados",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": true
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
